{% extends 'base.html.twig' %}

{% block title %}profil{% endblock %}

{% block body %}
<div class="container w-25">
    <div class="row">
        <div class="col">
        <h2>Profil de {{ user.username|capitalize }}</h2>
        <div class="col-12">
            <label for="username" class="form-label">Nom d'utilisateur</label>
        </div>
            <div class="mb-3">
                <div class="input-group">
               
                <input type="text" class="form-control" value="{{ user.username }}" read only>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <p>Nombre de commentaires post√©: {{ user.comments|length }}</p>
    </div>
    <a href="{{ path ('app_delete_user',{ 'id': user.id }) }}">Supprimer le compte</a>

</div>
{% endblock %}
